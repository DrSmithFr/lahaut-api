{% extends 'admin/admin-page.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}

    <style>
        .icon {
            float: right;
            font-size:500%;
            position: absolute;
            top:0rem;
            right:-0.3rem;
            opacity: .16;
        }

        .grey-dark
        {
            background: linear-gradient(180deg, #636767 0%, #495057 80%);
            color: #efefef;
        }

        .red {
            background: linear-gradient(180deg, rgba(207,82,82,1) 0%, rgba(121,9,9,1) 80%);
            color: #fff;
        }

        .purple
        {
            background: linear-gradient(180deg, #886ab5 0%, #65498f 80%);
            color: #fff;
        }

        .orange {
            background: linear-gradient(180deg, #d2a924 0%, #ad8a17 80%);
            color: #fff;
        }

        .kpi-card
        {
            overflow: hidden;
            position: relative;
            box-shadow: 1px 1px 3px rgba(0,0,0,0.75);;
            display: inline-block;
            float: left;
            padding: 1em;
            border-radius: 0.3em;
            font-family: sans-serif;
            width: 100%;
            min-width: 180px;
            margin-left: 0.5em;
            margin-top: 0.5em;
        }

        .card-value {
            display: block;
            font-size: 200%;
            font-weight: bolder;
        }

        .card-text {
            display:block;
            font-size: 70%;
            padding-left: 0.2em;
        }
    </style>
{% endblock %}

{% block content_title %}Dashboard{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-12 col-md-6 col-lg-3">
            <div class="kpi-card grey-dark">
                <span class="card-value">{{ customers }}</span>
                <span class="card-text">Customer</span>
                <i class="fas fa-user icon"></i>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="kpi-card purple">
                <span class="card-value">{{ monitors }}</span>

                <span class="card-text">Monitors</span>
                <i class="fas fa-users icon"></i>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="kpi-card red">
                <span class="card-value">{{ bookings|format_currency('EUR', {fraction_digit: 2}) }}</span>
                <span class="card-text">Booking this months</span>
                <i class="fas fa-shopping-cart icon"></i>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="kpi-card orange">
                <span class="card-value">{{ platformFee|format_currency('EUR', {fraction_digit: 2}) }}</span>
                <span class="card-text">Platform fees</span>
                <i class="fas fa-money-bill icon"></i>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-4">
            {{ render_chart(customerChart) }}
        </div>

        <div class="col-12 col-lg-4">
            {{ render_chart(monitorChart) }}
        </div>

        <div class="col-12 col-lg-4">
            {{ render_chart(bookingChart) }}
        </div>
    </div>
{% endblock %}
